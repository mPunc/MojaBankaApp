@model MojaBanka.Models.Racun
@using MojaBanka.Models

@{
    ViewBag.Title = "Računi";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Klijent klijent = ViewBag.Klijent;
}

<h2>Ažuriraj račun @Html.DisplayFor(model => model.Id_racun)</h2>
<p>NAPOMENA: Ažuriranjem ovim načinom će promijeniti stanje računa bez zapisa o transakciji!</p>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => klijent.Oib_klijent)
        </dt>

        <dd>
            @Html.DisplayFor(model => klijent.Oib_klijent)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => klijent.Ime_klijent)
        </dt>

        <dd>
            @Html.DisplayFor(model => klijent.Ime_klijent)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => klijent.Prezime_klijent)
        </dt>

        <dd>
            @Html.DisplayFor(model => klijent.Prezime_klijent)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => klijent.Adresa_klijent)
        </dt>

        <dd>
            @Html.DisplayFor(model => klijent.Adresa_klijent)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => klijent.Datum_klijent)
        </dt>

        <dd>
            @Html.DisplayFor(model => klijent.Datum_klijent)
        </dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_racun)

        <div class="form-group">
            @Html.LabelFor(model => model.Stanje_racun, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Stanje_racun, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Stanje_racun, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.Id_klijent)

        <div class="form-group mt-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Spremi promjene" class="btn btn-outline-success" />
            </div>
        </div>
    </div>
}

<div class="mt-3">
    @Html.ActionLink("Natrag na listu", "Index", null, new { @class = "btn btn-sm btn-outline-primary" })
</div>
