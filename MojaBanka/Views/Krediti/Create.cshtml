                @Html.EditorFor(model => model.Iznos_kredita, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Iznos_kredita, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Kreditna_stopa, htmlAttributes: new { @class = "control-label col-md-2" })
