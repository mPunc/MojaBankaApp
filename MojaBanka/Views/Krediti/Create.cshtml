                @Html.EditorFor(model => model.Id_racun, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Id_racun, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Iznos_kredita, htmlAttributes: new { @class = "control-label col-md-2" })
