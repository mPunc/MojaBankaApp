@model MojaBanka.Models.Kredit

@{
    ViewBag.Title = "Novi kredit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Novi kredit</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
